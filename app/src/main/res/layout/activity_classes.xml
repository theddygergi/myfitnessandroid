<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ClassesActivity">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:menu="@menu/home_menu" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavView"
        tools:ignore="MissingConstraints">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="ExtraText">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Our classes"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:textSize="40dp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:layout_marginTop="50dp"
                android:id="@+id/yogaImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/yoga_class"/>

            <Button
                android:id="@+id/joinYoga"
                android:layout_width="123dp"
                android:layout_height="44dp"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="170dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/poppins"
                android:text="Join"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_marginTop="250dp"
                android:id="@+id/zumbaImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/zumba_class"/>

            <Button
                android:id="@+id/joinZumba"
                android:layout_width="123dp"
                android:layout_height="44dp"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="375dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/poppins"
                android:text="Join"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_marginTop="450dp"
                android:id="@+id/stepsImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/steps_class"/>

            <Button
                android:id="@+id/joinSteps"
                android:layout_width="123dp"
                android:layout_height="44dp"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="580dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/poppins"
                android:text="Join"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />
        </FrameLayout>
    </ScrollView>
</FrameLayout>
